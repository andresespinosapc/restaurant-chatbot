{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path // .tool_input.path // \"\"' | grep -q '\\.env$' && echo 'BLOCKED: Cannot read or edit .env files' && exit 2 || exit 0"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message 'Listo' -sound Glass -activate com.warp.terminal"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message 'Requiere permiso' -sound Ping -activate com.warp.terminal"
          }
        ]
      }
    ]
  }
}
